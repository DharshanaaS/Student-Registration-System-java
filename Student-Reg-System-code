       Connection con1;
       PreparedStatement insert;
    private void table_update()
    {
        int c;
        
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con1=DriverManager.getConnection("jdbc:mysql://localhost/student_db","root","");
            insert=con1.prepareStatement("select * from record");
            ResultSet rs=insert.executeQuery();
            ResultSetMetaData Rss=rs.getMetaData();
            c=Rss.getColumnCount();
            DefaultTableModel Df = (DefaultTableModel)jTable1.getModel();
            Df.setRowCount(0);
            while(rs.next())
            {
                Vector v2=new Vector();
                for(int a=1;a<=c;a++)
                {
                   v2.add(rs.getString("id"));
                    v2.add(rs.getString("name"));
                     v2.add(rs.getString("college"));
                       v2.add(rs.getString("mobile"));
                        v2.add(rs.getString("course"));
                     
                }
                Df.addRow(v2);
            }
            jTextField8.setText("");
            jTextField9.setText("");
            jTextField11.setText("");
            jTextField12.setText("");
             jTextField8.requestFocus();
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        }

            
        
    }
    private void jButton20MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jButton20MouseClicked
        // TODO add your handling code here:
       String name=jTextField8.getText();
       String college=jTextField9.getText();
       String mobile=jTextField11.getText();
       String course=jTextField12.getText();
       
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con1=DriverManager.getConnection("jdbc:mysql://localhost/student_db","root","");
            insert=con1.prepareStatement("insert into record(name,college,mobile,course)values(?,?,?,?)");
            insert.setString(1, name);
            insert.setString(2, college);
            insert.setString(3, mobile);
            insert.setString(4, course);
           
            insert.executeUpdate();
            JOptionPane.showMessageDialog(this," Record Added Successfully!!");
            table_update();
            jTextField8.setText("");
            jTextField9.setText("");
            jTextField11.setText("");
            jTextField12.setText("");
             jTextField8.requestFocus();
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton20MouseClicked

    private void jButton21MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jButton21MouseClicked
        // TODO add your handling code here:
        DefaultTableModel Df = (DefaultTableModel)jTable1.getModel();
        int selectedIndex=jTable1.getSelectedRow();
      
       
        try {
           int id=Integer.parseInt(Df.getValueAt(selectedIndex, 0).toString());
           int dialogResult=JOptionPane.showConfirmDialog(null,"Do you want to Delete the Record?","Warning",JOptionPane.YES_NO_OPTION);
           if (dialogResult==JOptionPane.YES_OPTION)
           {
            String name=jTextField8.getText();
            String college=jTextField9.getText();
            String mobile=jTextField11.getText();
            String course=jTextField12.getText();
            Class.forName("com.mysql.jdbc.Driver");
            con1=DriverManager.getConnection("jdbc:mysql://localhost/student_db","root","");
            insert=con1.prepareStatement("delete from record where id=?");
            
            insert.setInt(1, id);
            insert.executeUpdate();
            JOptionPane.showMessageDialog(this,"Record Deleted Successfully!!");
            table_update();
            jTextField8.setText("");
            jTextField9.setText("");
            jTextField11.setText("");
            jTextField12.setText("");
            jTextField8.requestFocus();
           }
            
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(Student_registration_system.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton21MouseClicked

